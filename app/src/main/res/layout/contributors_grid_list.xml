<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/familyMembers"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingBottom="@dimen/pad_10"
        android:gravity="center"
        android:layout_margin="@dimen/mrg_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:focusable="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="2dp"
            android:padding="@dimen/pad_10"
            android:id="@+id/card"
            app:cardElevation="2dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/mrg_20"
                tools:src="@drawable/empty_user"
                android:id="@+id/avatar"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Rammavathi"
            android:layout_marginTop="@dimen/mrg_10"
            android:textColor="@color/color_text"
            android:gravity="center"
            android:textSize="@dimen/text_14"
            android:id="@+id/name"
            android:layout_below="@+id/card"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
